---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Hooley Custom Homes LLC - Custom Home Builder in Sanpete & Juab County"
  description="Hooley Custom Homes LLC - Premier custom home builder serving Sanpete & Juab County. We bring to life the homes people dream of with quality craftsmanship and exceptional service."
>
  <Header />
  <!-- Hero Section -->
  <section class="hero" id="home">
    <div class="container hero-content">
      <h1>We Don't Just Build Homes, We Build Relationships</h1>
      <p>Bringing to life the homes people dream of in Sanpete & Juab County</p>
      <div class="hero-buttons">
        <a href="projects.html" class="btn btn-primary">View Our Projects</a>
        <a href="contact.html" class="btn btn-secondary">Get A Quote</a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section" id="about">
    <div class="container">
      <div class="section-header">
        <h2>About Hooley Custom Homes</h2>
      </div>
      <div class="about-content">
        <div class="about-image">
          <img
            src="/images/placeholder-home.jpg"
            alt="Hooley Custom Homes Project"
          />
        </div>
        <div class="about-text">
          <h3>Your Vision, Our Expertise</h3>
          <p>
            At Hooley Custom Homes, we're more than just builders - we're dream
            makers. With years of experience in custom home construction,
            renovations, and remodels, we take pride in turning your vision into
            reality.
          </p>
          <p>
            Our team of skilled professionals is dedicated to quality
            craftsmanship, attention to detail, and exceptional customer
            service. We believe in building not just beautiful homes, but
            lasting relationships with our clients.
          </p>
          <p>
            Whether you're looking to build your dream home from the ground up,
            renovate an existing space, or add custom features to your current
            home, Hooley Custom Homes is your trusted partner in Sanpete and
            Juab counties.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="section services" id="services">
    <div class="container">
      <div class="section-header">
        <h2>Our Services</h2>
      </div>
      <div class="services-grid">
        <div class="service-card">
          <div
            class="service-image"
            style="
                background-image: url('/images/Custom Renovation & Remodels.avif');
              "
          >
          </div>
          <div class="service-content">
            <h3>Custom Home Building</h3>
            <p>
              From concept to completion, we build the home of your dreams with
              quality craftsmanship and attention to detail.
            </p>
          </div>
        </div>
        <div class="service-card">
          <div
            class="service-image"
            style="
                background-image: url('/images/Custom Remodel.avif');
              "
          >
          </div>
          <div class="service-content">
            <h3>Renovations & Remodels</h3>
            <p>
              Transform your existing space with our expert renovation and
              remodeling services tailored to your needs.
            </p>
          </div>
        </div>
        <div class="service-card">
          <div
            class="service-image"
            style="background-image: url('/images/Custom Kitchens.avif')"
          >
          </div>
          <div class="service-content">
            <h3>Custom Kitchens & Bathrooms</h3>
            <p>
              Create beautiful, functional spaces with our custom kitchen and
              bathroom design and installation services.
            </p>
          </div>
        </div>
        <div class="service-card">
          <div
            class="service-image"
            style="background-image: url('/images/Home Office Addition.avif')"
          >
          </div>
          <div class="service-content">
            <h3>Home Additions</h3>
            <p>
              Expand your living space with seamless additions that match your
              home's style and meet your family's needs.
            </p>
          </div>
        </div>
        <div class="service-card">
          <div
            class="service-image"
            style="
                background-image: url('/images/income-properties.jpg');
              "
          >
          </div>
          <div class="service-content">
            <h3>Income Properties</h3>
            <p>
              Build or convert spaces into income-generating properties with
              basement apartments, casitas, and more.
            </p>
          </div>
        </div>
        <div class="service-card">
          <div
            class="service-image"
            style="background-image: url('/images/Master Suite Renovation.avif')"
          >
          </div>
          <div class="service-content">
            <h3>Custom Features</h3>
            <p>
              Enhance your home with custom trim, molding, doors, and unique
              architectural elements.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="section" id="projects">
    <div class="container">
      <div class="section-header">
        <h2>Custom Home Plans</h2>
      </div>
      <div class="main-projects-grid">
        <div class="main-project-card">
          <div
            class="main-project-image"
            style="background-image: url('/images/Mountain Retreat with Wrap Around Deck and a Vaulted Central Core.avif')"
          >
          </div>
          <div class="main-project-overlay">
            <h3>Mountain Retreat</h3>
            <p>
              Peaceful mountain living with elevated views and rustic elegance.
            </p>
          </div>
        </div>
        <div class="main-project-card">
          <div
            class="main-project-image"
            style="background-image: url('/images/Modern Farmhouse.avif')"
          >
          </div>
          <div class="main-project-overlay">
            <h3>Modern Farmhouse</h3>
            <p>
              Classic charm meets modern design in this fresh farmhouse build.
            </p>
          </div>
        </div>
        <div class="main-project-card">
          <div
            class="main-project-image"
            style="background-image: url('/images/Utah Retreat.avif'); background-position: right;"
          >
          </div>
          <div class="main-project-overlay">
            <h3>Utah Retreat</h3>
            <p>A relaxing desert escape crafted for style and tranquility.</p>
          </div>
        </div>
        <div class="main-project-card">
          <div
            class="main-project-image"
            style="background-image: url('/images/Modern Mountain House Plan with Panoramic Views Expansion.avif')"
          >
          </div>
          <div class="main-project-overlay">
            <h3>Modern Mountain House</h3>
            <p>
              Expansive views and indoor-outdoor flow define this modern home.
            </p>
          </div>
        </div>
        <div class="main-project-card">
          <div
            class="main-project-image"
            style="background-image: url('/images/New American Farmhouse.avif')"
          >
          </div>
          <div class="main-project-overlay">
            <h3>New American Farmhouse</h3>
            <p>A fresh take on traditional living with generous open space.</p>
          </div>
        </div>
        <div class="main-project-card">
          <div
            class="main-project-image"
            style="background-image: url('/images/Modern Farmhouse Plan with French Door Greeting.avif')"
          >
          </div>
          <div class="main-project-overlay">
            <h3>French Door Greeting</h3>
            <p>Graceful French doors set the tone for a warm, inviting home.</p>
          </div>
        </div>
      </div>
      <div style="text-align: center; margin-top: 40px">
        <a href="projects.html" class="btn btn-primary">View More</a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="section testimonials">
    <div class="container">
      <div class="section-header">
        <h2>What Our Clients Say</h2>
      </div>
      <div class="testimonials-grid">
        <div class="testimonial-card">
          <div class="testimonial-text">
            <p>
              "Hooley Custom Homes exceeded our expectations in every way. Their
              attention to detail and quality craftsmanship is unmatched. We
              couldn't be happier with our dream home."
            </p>
          </div>
          <div class="testimonial-author">
            <div
              class="author-image"
              style="background-image: url('/api/placeholder/100/100')"
            >
            </div>
            <div>
              <h4>John & Sarah Thompson</h4>
              <p>Custom Home Build</p>
            </div>
          </div>
        </div>
        <div class="testimonial-card">
          <div class="testimonial-text">
            <p>
              "The team at Hooley was professional from start to finish. They
              listened to our needs and delivered a beautiful kitchen remodel
              that transformed our entire home."
            </p>
          </div>
          <div class="testimonial-author">
            <div
              class="author-image"
              style="background-image: url('/api/placeholder/100/100')"
            >
            </div>
            <div>
              <h4>Mike Johnson</h4>
              <p>Kitchen Remodel</p>
            </div>
          </div>
        </div>
        <div class="testimonial-card">
          <div class="testimonial-text">
            <p>
              "Our basement apartment has been generating income for over a year
              now thanks to Hooley Custom Homes. They handled everything from
              permits to finishing touches."
            </p>
          </div>
          <div class="testimonial-author">
            <div
              class="author-image"
              style="background-image: url('/api/placeholder/100/100')"
            >
            </div>
            <div>
              <h4>The Andersons</h4>
              <p>Basement Apartment Conversion</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta" id="contact">
    <div class="container">
      <h2>Ready to Build Your Dream Home?</h2>
      <p>
        Contact us today for a free consultation and let's bring your vision to
        life.
      </p>
      <a href="contact.html" class="btn">Get In Touch</a>
    </div>
  </section>

  <Footer />
</Layout>
